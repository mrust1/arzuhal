%h1 Listing users
= link_to 'New user', new_user_path
%table
  %tr
    %th Name
    %th Surname
    %th Email
    %th Body
    %th{:colspan => "3"} Options
  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.surname
      %td= user.email
      %td= user.body
      %td= link_to 'Show', user_path(user)
      %td= link_to 'Edit', edit_user_path(user)
      %td= link_to 'Destroy', user_path(user),
          method: :delete, data: { confirm: 'Are you sure?' }